@page
@model DevChatter.DevStreams.Web.Pages.Channels.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Channel</h4>
<hr />
<div id="app" class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Channel.Name" class="control-label"></label>
                <input asp-for="Channel.Name" class="form-control" />
                <span asp-validation-for="Channel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Channel.Uri" class="control-label"></label>
                <input asp-for="Channel.Uri" class="form-control" />
                <span asp-validation-for="Channel.Uri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Channel.CountryCode" class="control-label"></label>
                <select asp-for="Channel.CountryCode" asp-items="Model.Countries" id="country" class="form-control" v-model="selectedCountry">
                    <option value="">Select Country</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Channel.TimeZoneId" class="control-label"></label>
                <select asp-for="Channel.TimeZoneId" asp-items="Model.TimeZones" id="timeZone" 
                        class="form-control" v-model="selectedTimeZone">
                    <option v-for="option in timeZoneOptions"
                            :value="option.key"
                            :key="option.key">
                        {{ option.value }}
                    </option>
                </select>
                <span asp-validation-for="Channel.TimeZoneId" class="text-danger"></span>
            </div>

            <div>
            <label asp-for="Channel.TagIds" class="typo__label" for="ajax"></label>
            <multiselect v-model="selectedTags" id="ajax" label="name" 
                track-by="id" placeholder="" open-direction="bottom"
                :options="tags" :multiple="true" :searchable="true"
                :loading="isLoadingTags" :internal-search="false" 
                :clear-on-select="true" :close-on-select="false" 
                :options-limit="300" :limit="3"
                :max-height="600" :show-no-results="false" 
                v-on:search-change="tagSearch">
                <template slot="tag" slot-scope="{ option, remove }">
                    <span class="multiselect__tag">
                        <span>{{ option.name }}</span>
                        <span class="multiselect__tag-icon" v-on:click="remove(option)"></span>
                    </span>
                </template>
                <template slot="clear" slot-scope="props">
                </template>
                <span slot="noResult">Oops! No elements found. Consider changing the search query.</span>
            </multiselect>
            </div>
            <input type="hidden" asp-for="Channel.TagIdString" v-model="tagIds" />
            <input type="hidden" asp-for="Channel.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://unpkg.com/vue-multiselect@2.1.0"></script>
    <link rel="stylesheet" href="https://unpkg.com/vue-multiselect@2.1.0/dist/vue-multiselect.min.css">
    <script src="~/js/vue/streams-create.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
