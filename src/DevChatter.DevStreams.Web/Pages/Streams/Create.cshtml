@page
@using Streams
@using NodaTime;
@model DevChatter.DevStreams.Web.Pages.Streams.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post">
    <select asp-for="StreamTime.TimeZoneId" asp-items="Model.TimeZoneIds">
        <option value="">Choose Location</option>
    </select>

    <input asp-for="StreamTime.LocalTime" type="time" />
    
    <select asp-for="StreamTime.DayOfWeek" asp-items="Html.GetEnumSelectList<IsoDayOfWeek>()">
    </select>
    
    <input type="submit" value="click this" />
</form>

<ul>
    @foreach (var item in Model.SuggestedSessions)
    {
        <li>@CreateModel.ZonedDateTimePattern.Format(item)</li>
    }
</ul>
