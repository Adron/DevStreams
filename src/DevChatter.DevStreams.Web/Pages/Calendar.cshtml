@page
@model DevChatter.DevStreams.Web.Pages.CalendarModel
@{
    ViewData["Title"] = "Calendar";
}

<h2>Calendar</h2>

<div id="cal">

    <div class="form-group">
        <label class="control-label">Country</label>
        <select asp-for="CountryCode" asp-items="Model.Countries" id="country" class="form-control" v-model="selectedCountry">
            <option value="">Select Country</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Time Zone</label>
        <select id="timeZone" class="form-control" v-model="selectedTimeZone">
            <option v-for="option in timeZoneOptions"
                    :value="option.key"
                    :key="option.key">
                {{ option.value }}
            </option>
        </select>
    </div>

    <div class="form-group">
        <label class="control-label">Date</label>
        <input id="datePicker" class="form-control" v-model="selectedDate" type="date" />
    </div>

    <ul>
        <li v-for="anEvent in events">
            {{ anEvent.channelName }} ({{anEvent.utcStartTime}} - {{anEvent.utcEndTime}})
        </li>
    </ul>
</div>


@section Scripts {
    <script src="~/js/vue/streams-calendar.js"></script>
}

